<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/purpleactionbar" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:background="@color/purpleactionbar"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/gridcontentbackground"
            android:gravity="center_vertical"
            android:orientation="vertical" >

				<TextView 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginTop="15dp"
			    android:layout_marginBottom="15dp"
			    android:text="Locked Applications"
			    android:textAppearance="?android:attr/textAppearanceLarge"
			    android:gravity="center"
			    android:textSize="24sp"
            android:textStyle="bold|italic" 
              android:typeface="sans"
			    android:textColor="@color/purpletextviewfont"
			    />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:background="@drawable/application" />

            <TextView
                android:id="@+id/tApplockFrontText"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="25dp"
                android:layout_gravity="left"
                android:gravity="left"
                android:paddingTop="25dp"
                android:text="No Apps were locked"
                android:typeface="sans"
                android:textStyle="bold"
                android:textColor="@color/purpletextviewfont"
                android:textSize="20sp" />
            <Button
                android:id="@+id/bSetLockOnApps"
                android:layout_width="190dp"
                android:layout_height="38dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn"
                android:text="Click to lock apps"
                 android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:textColor="#fff" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>