<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvTheftLockScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="Enter Your Passcode"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/purpleborder"
        android:textSize="21dp" />

    <LinearLayout
        android:id="@+id/lEdit3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:weightSum="1.0" >

        <EditText
            android:id="@+id/et31"
            android:layout_width="37dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.2"
           	android:alpha="0.5"
            android:background="@drawable/gridcontentbackground"
            android:ems="10"
            android:enabled="false"
            android:gravity="center"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:textColor="@color/purpletextviewfont"
            android:textSize="45sp"
            android:layout_margin="1dp" />

        <EditText
            android:id="@+id/et32"
            android:layout_width="37dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.2"
            android:alpha="0.5"
            android:background="@drawable/gridcontentbackground"
            android:ems="10"
            android:enabled="false"
            android:gravity="center"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:textColor="@color/purpletextviewfont"
            android:textSize="45sp" 
            android:layout_margin="1dp"/>

        <EditText
            android:id="@+id/et33"
            android:layout_width="37dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.2"
            android:alpha="0.5"
            android:background="@drawable/gridcontentbackground"
            android:ems="10"
            android:enabled="false"
            android:gravity="center"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:textColor="@color/purpletextviewfont"
            android:textSize="45sp" 
            android:layout_margin="1dp"/>

        <EditText
            android:id="@+id/et34"
            android:layout_width="37dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.2"
            android:alpha="0.5"
            android:background="@drawable/gridcontentbackground"
            android:ems="10"
            android:enabled="false"
            android:gravity="center"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:textColor="@color/purpletextviewfont"
            android:textSize="45sp" 
            android:layout_margin="1dp"/>
    </LinearLayout>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@color/purpleactionbar"
        android:weightSum="1.0" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.25"
            android:weightSum="3"
            >

            <Button
                android:id="@+id/b31"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/gridcontentbackground"
                android:text="1"
                android:textColor="@color/purpleborder"
                android:textSize="30dp"
                android:layout_margin="1dp" />

            <Button
                android:id="@+id/b32"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/gridcontentbackground"
                android:text="2"
                android:textColor="@color/purpleborder"
                android:textSize="30dp"
                android:layout_margin="1dp" />

            <Button
                android:id="@+id/b33"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/gridcontentbackground"
                android:text="3"
                android:textColor="@color/purpleborder"
                android:textSize="30dp"
                android:layout_margin="1dp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.25"
            android:weightSum="3" >

            <Button
                android:id="@+id/b34"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/gridcontentbackground"
                android:text="4"
                android:textColor="@color/purpleborder"
                android:textSize="30dp" 
                android:layout_margin="1dp"/>

            <Button
                android:id="@+id/b35"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/gridcontentbackground"
                android:text="5"
                android:textColor="@color/purpleborder"
                android:textSize="30dp"
                android:layout_margin="1dp" />

            <Button
                android:id="@+id/b36"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/gridcontentbackground"
                android:text="6"
                android:textColor="@color/purpleborder"
                android:textSize="30dp"
                android:layout_margin="1dp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.25"
            android:weightSum="3" >

            <Button
                android:id="@+id/b37"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/gridcontentbackground"
                android:text="7"
                android:textColor="@color/purpleborder"
                android:textSize="30dp" 
                android:layout_margin="1dp"/>

            <Button
                android:id="@+id/b38"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/gridcontentbackground"
                android:text="8"
                android:textColor="@color/purpleborder"
                android:textSize="30dp"
                android:layout_margin="1dp" />

            <Button
                android:id="@+id/b39"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/gridcontentbackground"
                android:text="9"
                android:textColor="@color/purpleborder"
                android:textSize="30dp"
                android:layout_margin="1dp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.25"
            android:weightSum="3" >

            <Button
                android:id="@+id/b3Ok"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/gridcontentbackground"
                android:text="OK"
                android:textColor="@color/purpleborder"
                android:textSize="30dp"
                android:layout_margin="1dp" />

            <Button
                android:id="@+id/b30"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/gridcontentbackground"
                android:text="0"
                android:textColor="@color/purpleborder"
                android:textSize="30dp" 
                android:layout_margin="1dp"/>

            <Button
                android:id="@+id/b3Del"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/gridcontentbackground"
                android:text="DEL"
                android:textColor="@color/purpleborder"
                android:textSize="30dp"
                android:layout_margin="1dp" />
        </TableRow>
    </TableLayout>

</LinearLayout>