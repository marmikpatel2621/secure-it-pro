<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:example="http://schemas.android.com/apk/res/com.example"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/purpleactionbar" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@color/purpleactionbar"
        android:gravity="center"
        android:paddingTop="15dp"
        tools:ignore="ScrollViewSize" >

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@color/purpleactionbar"
            android:columnCount="2"
            android:rowCount="3" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="172dp"
                android:layout_column="0"
                android:layout_row="0"
                android:alpha="1"
                android:background="@drawable/gridcontentbackground"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/ivAntitheft"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/antitheft" />

                <TextView
                    android:id="@+id/text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:text="Antitheft"
                    android:textAppearance="?android:attr/textAppearanceLargeInverse"
                    android:textColor="@color/purpletextviewfont"
                    android:textSize="16sp"
                    android:textStyle="italic|bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="172dp"
                android:layout_column="1"
                android:layout_gravity="left"
                android:layout_row="0"
                android:background="@drawable/gridcontentbackground"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/ivonetouchcall"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/onetouchcall" />

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:text="One Touch Call"
                    android:textAppearance="?android:attr/textAppearanceLargeInverse"
                    android:textColor="@color/purpletextviewfont"
                    android:textSize="16sp"
                    android:textStyle="italic|bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="172dp"
                android:layout_column="0"
                android:layout_row="1"
                android:background="@drawable/gridcontentbackground"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/ivAppLock"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/applock" />

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:text="Applock"
                    android:textAppearance="?android:attr/textAppearanceLargeInverse"
                    android:textColor="@color/purpletextviewfont"
                    android:textSize="16sp"
                    android:textStyle="italic|bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="172dp"
                android:layout_column="1"
                android:layout_row="1"
                android:background="@drawable/gridcontentbackground"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/ivDataHiding"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/datahiding" />

                <TextView
                    android:id="@+id/text3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:text="DataLock"
                    android:textAppearance="?android:attr/textAppearanceLargeInverse"
                    android:textColor="@color/purpletextviewfont"
                    android:textSize="16sp"
                    android:textStyle="italic|bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="172dp"
                android:layout_column="0"
                android:layout_gravity="fill_vertical"
                android:layout_row="2"
                android:background="@drawable/gridcontentbackground"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/ivSetting"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/setting" />

                <TextView
                    android:id="@+id/text4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:text="Change  Password"
                    android:textAppearance="?android:attr/textAppearanceLargeInverse"
                    android:textColor="@color/purpletextviewfont"
                    android:textSize="16sp"
                    android:textStyle="italic|bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="172dp"
                android:layout_column="1"
                android:layout_gravity="left|fill_vertical"
                android:layout_row="2"
                android:background="@drawable/gridcontentbackground"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/ivAboutUs"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/aboutus" />

                <TextView
                    android:id="@+id/text5"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:text="Developers"
                    android:textAppearance="?android:attr/textAppearanceLargeInverse"
                    android:textColor="@color/purpletextviewfont"
                    android:textSize="16sp"
                    android:textStyle="italic|bold" />
            </LinearLayout>
        </GridLayout>
    </RelativeLayout>

</ScrollView>